{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Backend Service Helm Chart Values",
  "description": "Schema for the backend-service Helm chart values.yaml",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "global": {
      "type": "object",
      "description": "Global configuration"
    },
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name of the chart"
    },
    "replicaCount": {
      "type": "integer",
      "description": "Number of replicas for the deployment",
      "minimum": 0,
      "default": 1
    },
    "image": {
      "type": "object",
      "description": "Image configuration",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Repository where the service image is pulled from"
        },
        "tag": {
          "type": "string",
          "description": "Image tag"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Image pull policy",
          "default": "IfNotPresent"
        }
      },
      "required": ["repository", "tag"]
    },
    "imagePullSecrets": {
      "type": "array",
      "description": "Image pull secrets for private registries",
      "items": {
        "type": "object"
      }
    },
    "serviceAccount": {
      "type": "object",
      "description": "Service account configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable service account creation",
          "default": false
        },
        "annotations": {
          "type": "object",
          "description": "Annotations for the service account"
        },
        "name": {
          "type": "string",
          "description": "Name of the service account"
        },
        "workloadIdentity": {
          "type": "object",
          "description": "Workload identity configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "clientId": {
              "type": "string"
            }
          }
        }
      }
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context"
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context"
    },
    "service": {
      "type": "object",
      "description": "Service configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "default": 80
        },
        "extraLabels": {
          "type": "object"
        }
      }
    },
    "ports": {
      "type": "object",
      "description": "Port configuration",
      "properties": {
        "application": {
          "type": "integer",
          "description": "Application port (container port)",
          "default": 8080
        },
        "service": {
          "type": "integer",
          "description": "Service port",
          "default": 80
        }
      }
    },
    "env": {
      "type": "object",
      "description": "Environment variables as key-value pairs (stored in ConfigMap)"
    },
    "envSecrets": {
      "type": "object",
      "description": "Secret environment variables as key-value pairs (stored in Secret)"
    },
    "envVars": {
      "type": "array",
      "description": "Environment variables with advanced configuration",
      "items": {
        "type": "object"
      }
    },
    "extraEnvConfigMaps": {
      "type": "array",
      "description": "Additional ConfigMaps to load as environment variables",
      "items": {
        "type": "string"
      }
    },
    "extraEnvSecrets": {
      "type": "array",
      "description": "Additional Secrets to load as environment variables",
      "items": {
        "type": "string"
      }
    },
    "initContainers": {
      "type": "array",
      "description": "Init containers configuration",
      "items": {
        "type": "object"
      }
    },
    "sidecars": {
      "type": "array",
      "description": "Additional containers to run alongside the main container",
      "items": {
        "type": "object"
      }
    },
    "probes": {
      "type": "object",
      "description": "Probes configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "liveness": {
          "type": "object"
        },
        "readiness": {
          "type": "object"
        },
        "startup": {
          "type": "object"
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Resource limits and requests"
    },
    "autoscaling": {
      "type": "object",
      "description": "Horizontal Pod Autoscaler configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minReplicas": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "maxReplicas": {
          "type": "integer",
          "minimum": 1,
          "default": 100
        },
        "targetCPUUtilizationPercentage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 80
        },
        "targetMemoryUtilizationPercentage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    },
    "keda": {
      "type": "object",
      "description": "KEDA autoscaling configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "paused": {
          "type": "boolean",
          "default": false
        },
        "extraAnnotations": {
          "type": "object"
        },
        "pollingInterval": {
          "type": "integer",
          "default": 30
        },
        "cooldownPeriod": {
          "type": "integer",
          "default": 300
        },
        "minReplicaCount": {
          "type": "integer",
          "default": 1
        },
        "maxReplicaCount": {
          "type": "integer",
          "default": 4
        },
        "scalers": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "pdb": {
      "type": "object",
      "description": "Pod Disruption Budget configuration"
    },
    "rollingUpdate": {
      "type": "object",
      "description": "Rolling update strategy"
    },
    "nodeSelector": {
      "type": "object",
      "description": "Node selector"
    },
    "tolerations": {
      "type": "array",
      "description": "Tolerations",
      "items": {
        "type": "object"
      }
    },
    "affinity": {
      "type": "object",
      "description": "Affinity rules"
    },
    "podAnnotations": {
      "type": "object",
      "description": "Pod annotations"
    },
    "podLabels": {
      "type": "object",
      "description": "Pod labels"
    },
    "terminationGracePeriodSeconds": {
      "type": "integer",
      "description": "Termination grace period in seconds",
      "default": 30
    },
    "volumeMounts": {
      "type": "array",
      "description": "Volume mounts",
      "items": {
        "type": "object"
      }
    },
    "volumes": {
      "type": "array",
      "description": "Volumes",
      "items": {
        "type": "object"
      }
    },
    "secretsProvider": {
      "type": "object",
      "description": "Secrets provider configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "provider": {
          "type": "string",
          "enum": ["azure", "aws", "gcp", "vault"],
          "default": "azure"
        },
        "pollingInterval": {
          "type": "string",
          "default": "2m"
        },
        "azure": {
          "type": "object",
          "properties": {
            "tenantId": {
              "type": "string"
            },
            "workloadIdentity": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                },
                "clientId": {
                  "type": "string"
                }
              }
            },
            "keyVaults": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "secrets": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "key": {
                          "type": "string"
                        },
                        "version": {
                          "type": "string"
                        }
                      },
                      "required": ["name", "key"]
                    }
                  },
                  "keys": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "key": {
                          "type": "string"
                        },
                        "version": {
                          "type": "string"
                        }
                      },
                      "required": ["name", "key"]
                    }
                  },
                  "certificates": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "key": {
                          "type": "string"
                        },
                        "version": {
                          "type": "string"
                        }
                      },
                      "required": ["name", "key"]
                    }
                  }
                },
                "required": ["name"]
              }
            }
          }
        }
      }
    },
    "externalSecrets": {
      "type": "array",
      "description": "External secrets configuration",
      "items": {
        "type": "object"
      }
    },
    "extraCronJobs": {
      "type": "object",
      "description": "Extra CronJobs configuration"
    },
    "hooks": {
      "type": "object",
      "description": "Hooks configuration",
      "properties": {
        "migration": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "name": {
              "type": "string"
            },
            "command": {
              "type": "string"
            },
            "initContainers": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    "routes": {
      "type": "object",
      "description": "Gateway API routes configuration",
      "properties": {
        "hostname": {
          "type": "string"
        },
        "gateway": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          }
        },
        "pathPrefix": {
          "type": "string"
        },
        "paths": {
          "type": "object"
        }
      }
    },
    "extraRoutes": {
      "type": "object",
      "description": "Extra Gateway API routes"
    },
    "prometheus": {
      "type": "object",
      "description": "Prometheus monitoring configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "team": {
          "type": "string"
        },
        "rules": {
          "type": "object"
        }
      }
    },
    "auditVolume": {
      "type": "object",
      "description": "Audit volume configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "mountPath": {
          "type": "string",
          "default": "/audit"
        },
        "capacity": {
          "type": "string",
          "default": "1Ti"
        },
        "attributes": {
          "type": "object",
          "properties": {
            "resourceGroup": {
              "type": "string"
            },
            "storageAccount": {
              "type": "string"
            },
            "containerName": {
              "type": "string"
            }
          }
        }
      }
    },
    "extraObjects": {
      "type": "array",
      "description": "Extra Kubernetes objects to deploy",
      "items": {
        "type": "object"
      }
    },
    "clusterInternalServiceSuffix": {
      "type": "string",
      "description": "Cluster internal service suffix override",
      "default": ".svc.cluster.local"
    },
    "minReadySeconds": {
      "type": "integer",
      "description": "Minimum ready seconds for deployment",
      "minimum": 0,
      "default": 5
    }
  }
}
